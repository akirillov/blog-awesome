# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file         controllers.Assets.at(path="/public", file)
GET        /webjars/*file        controllers.WebJarAssets.at(file)

# Home page
GET        /                     @controllers.Application.index
GET        /post/:name           @controllers.Application.posts(name)
GET        /edit/                @controllers.Application.editpost(name: Option[String])
POST       /post                 @controllers.Application.uploadPost
GET        /logout               @controllers.CustomLoginController.logout

->         /auth                 securesocial.Routes

